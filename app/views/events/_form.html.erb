
  <%= form_with(model: event) do |form| %>
  <div class="new-event-show">
    <% if event.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
  
        <ul>
          <% event.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= form.label :title, "Event Title"%>
      <%= form.text_field :title, require:true%>
    </div>
    <br>
    <div class="field">
      <%= form.label :location, "Event Location"%>
      <%= form.text_field :location, required:true%>
    </div>
    <br>
    
    <div class="field">
      <%= form.label :date, "Pick a Date"%>
      <%= form.date_field :date, required:true, placeholder:"Day/Month/Year"%>
      </div>
      <br>
    <div class="privacy-options">
      <div class="privacy-1">
        <%= form.label :privacy, "Public Event"%>
        <%= form.radio_button :privacy, false%>
      </div>
      
      <div class="privacy-2">
        <%= form.label :privacy, "Private Event"%>
        <%= form.radio_button :privacy, true%>
      </div>
    </div>
    <br>
    <div>
      <%= form.submit class: "log-in-btn-devise"%>
    </div>
    <br>
    </div>
    
  <% end %>

