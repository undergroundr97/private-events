

<div class="registration-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.text_field :name, required:true, placeholder: 'Name'%>
    </div>
     <br>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', required: true%>
    </div>
     <br>
  
    <div class="field">
     
      <%= f.password_field :password, required:true, placeholder:'********', autocomplete: "new-password" %>
    </div>
    <br>
     <div class="field">
   
      <%= f.password_field :password_confirmation, required: true, placeholder: '********', autocomplete: "new-password" %>
    </div>
  <br>
    <div class="actions">
      <%= f.submit "Sign up", class: "sign-up-devise"%>
    </div>
  <% end %>
  <br>
  <div class="devise-links"><%= render "devise/shared/links" %></div>
</div>


